Let bus5 = bus & [red == 60];
Let bus6 = bus & [red == 75];
Let bus7 = bus & [red == 90];
Let bus8 = bus & [red == 105];
Let bus9 = bus & [red == 120];
Let bus10 = bus & [red == 135];
Let bus11 = bus & [red == 150];
Let bus12 = bus & [red == 165];

Let busStop = [red == 0] & [green == 255] & [blue == 0];

Let busAtStop(x) = busStop & close(x);

